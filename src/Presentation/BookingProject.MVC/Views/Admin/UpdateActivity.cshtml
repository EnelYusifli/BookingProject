@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model UpdateActivityViewModel

<!-- Page main content START -->
<div class="page-content-wrapper p-xxl-4">
    <!-- Title -->
    <div class="row">
        <div class="col-12 mb-4 mb-sm-5">
            <div class="d-sm-flex justify-content-between align-items-center">
                <h1 class="h3 mb-3 mb-sm-0">Update Activity</h1>
            </div>
        </div>
    </div>

    <!-- Form START -->
    <div class="card shadow mt-5">
        <!-- Card body START -->
        <div class="card-body">
            <form asp-action="UpdateActivity" method="post">
                <div class="mb-3">
                    <label asp-for="ActivityName" class="form-label">Activity Name</label>
                    <input asp-for="ActivityName" class="form-control" />
                    <span asp-validation-for="ActivityName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IsDeactive" class="form-label">Deactive</label>
                    <select asp-for="IsDeactive" class="form-select">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                    <span asp-validation-for="IsDeactive" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Update Activity</button>
            </form>
        </div>
        <!-- Card body END -->
    </div>
    <!-- Form END -->
</div>
<!-- Page main content END -->
