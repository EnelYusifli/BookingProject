															<div class="mt-3 mt-sm-0">
																<a asp-action="roomdetail" asp-route-id="@room.Id" class="btn btn-sm btn-primary mb-0">Select Room</a>
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
										<!-- Room item END -->
									}
								</div>
							</div>
							<!-- Card body END -->
						</div>
