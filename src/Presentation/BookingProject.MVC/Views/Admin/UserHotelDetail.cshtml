												<li class="list-group-item pb-0">
													<i class="fa-solid fa-check-circle text-success me-2"></i>@item
												</li>
											}
										</ul>
									</div>



								</div>
							</div>
							<!-- Card body END -->
						</div>
						<!-- Amenities END -->
						<!-- Room START -->
						<div class="card bg-transparent" id="room-options">
