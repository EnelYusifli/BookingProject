@model ProfileViewModel
@{
	Layout = "~/Views/Shared/AccountLayout.cshtml";
}
<!-- **************** MAIN CONTENT START **************** -->


			<!-- Main content START -->
			<div class="col-lg-8 col-xl-9">

				<!-- Offcanvas menu button -->
				<div class="d-grid mb-0 d-lg-none w-100">
					<button class="btn btn-primary mb-4" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
						<i class="fas fa-sliders-h"></i> Menu
					</button>
				</div>
					<!-- Personal info START -->
					<div class="card border">
						<!-- Card header -->
						<div class="card-header border-bottom">
							<h4 class="card-header-title">Personal Information</h4>
						</div>

						<!-- Card body START -->
						<div class="card-body">
							<!-- Form START -->
							<form class="row g-3" enctype="multipart/form-data" method="post" asp-action="UpdatePersonalInfo" >
								<!-- Profile photo -->
								<div class="col-12">
									<label class="form-label">Upload your profile photo<span class="text-danger">*</span></label>
									<div class="d-flex align-items-center">
										<label class="position-relative me-4" for="uploadfile-1" title="Replace this pic">
											<!-- Avatar place holder -->
											<span class="avatar avatar-xl">
												<img id="uploadfile-1-preview" class="avatar-img rounded-circle border border-white border-3 shadow" src='@(string.IsNullOrEmpty(Model.User.ProfilePhotoUrl) ? "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" : Model.User.ProfilePhotoUrl)' alt="">
											</span>
										</label>
										<!-- Upload button -->
										<label class="btn btn-sm btn-primary-soft mb-0" for="uploadfile-1">Change</label>
										<input id="uploadfile-1" class="form-control d-none" type="file" asp-for="PersonalInfo.ProfilePhoto">
									</div>
								</div>

								<!-- Name -->
								<div class="col-md-6">
									<label class="form-label">First Name<span class="text-danger">*</span></label>
									<input type="text" class="form-control" value="@Model.User.FirstName" placeholder="Enter your first name" asp-for="PersonalInfo.FirstName">
								</div>

								<!-- Name -->
								<div class="col-md-6">
									<label class="form-label">Last Name<span class="text-danger">*</span></label>
									<input type="text" class="form-control" value="@Model.User.LastName" asp-for="PersonalInfo.LastName" placeholder="Enter your last name">
								</div>

								<!-- Mobile -->
								<div class="col-md-6">
									<label class="form-label">Mobile number</label>
									<input type="text" class="form-control"
									value=@Model.User.PhoneNumber
									asp-for="PersonalInfo.PhoneNumber"
									placeholder="Enter your mobile number">
								</div>


								<!-- Email -->
								<div class="col-md-6">
									<label class="form-label">Email address<span class="text-danger">*</span></label>
									<input type="email" class="form-control" value="@Model.User.Email" placeholder="Enter your email" asp-for="PersonalInfo.Email">
								</div>
								<!-- UserName -->
								<div class="col-md-6">
									<label class="form-label">Username<span class="text-danger">*</span></label>
									<input type="text" class="form-control" value="@Model.User.UserName" placeholder="Enter your username" asp-for="PersonalInfo.UserName">
								</div>

								<!-- Date of birth -->
								<div class="col-md-6">
									<label class="form-label">Date of Birth</label>
									<input type="text" class="form-control flatpickr"
										   value="@Model.User.Birthdate?.ToString("yyyy-MM-dd")"
										   placeholder="Enter date of birth"
										   data-date-format="Y-m-d" asp-for="PersonalInfo.Birthdate">
								</div>

								<!-- Button -->
								<div class="col-12 text-end">
									<button class="btn btn-primary mb-0" type="submit">Save Changes</button>
								</div>
							</form>
							<!-- Form END -->
						</div>
						<!-- Card body END -->
					</div>
					<!-- Personal info END -->

					<!-- Update Password START -->
					<div class="card border">
						<!-- Card header -->
						<div class="card-header border-bottom">
							<h4 class="card-header-title">Update Password</h4>
							<p class="mb-0">Your current email address is <span class="text-primary">@Model.User.Email</span></p>
						</div>

						<!-- Card body START -->
						<form class="card-body" method="post" asp-action="UpdatePassword">
							<!-- Current password -->
							<div class="mb-3">
								<label class="form-label">Current password</label>
								<input class="form-control" type="password" placeholder="Enter current password" asp-for="Password.OldPassword">
							</div>
							<!-- New password -->
							<div class="mb-3">
								<label class="form-label"> Enter new password</label>
								<div class="input-group">
									<input class="form-control fakepassword" placeholder="Enter new password" type="password" id="psw-input" asp-for="Password.NewPassword">
									<span class="input-group-text p-0 bg-transparent">
										<i class="fakepasswordicon fas fa-eye-slash cursor-pointer p-2"></i>
									</span>
								</div>
							</div>
							<!-- Confirm -->
							<div class="mb-3">
								<label class="form-label">Confirm new password</label>
								<input class="form-control" type="password" placeholder="Confirm new password" asp-for="Password.ConfirmNewPassword">
							</div>

							<div class="text-end">
								<button class="btn btn-primary mb-0" type="submit">Change Password</button>
							</div>
						</form>
						<!-- Card body END -->
					</div>
					<!-- Update Password END -->
				</div>
			</div>
			<!-- Main content END -->

